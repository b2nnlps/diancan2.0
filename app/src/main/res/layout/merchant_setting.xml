<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">


    <Button
        android:text="保存设置"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_save"
        android:layout_below="@+id/userText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="31dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_username"
        android:id="@+id/imageView2"
        android:layout_alignTop="@+id/userName"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/userPassword" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_password"
        android:id="@+id/imageView3"
        android:layout_alignTop="@+id/userPassword"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/userDeviceId"
        android:layout_alignEnd="@+id/imageView2" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginTop="25dp"
        android:id="@+id/userName"
        android:hint="账户名"
        android:maxLines="1"
        android:imeOptions="actionNext"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/imageView2"
        android:layout_marginStart="17dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_marginTop="34dp"
        android:id="@+id/userPassword"
        android:hint="密码"
        android:maxLines="1"
        android:imeOptions="actionNext"
        android:layout_below="@+id/userName"
        android:layout_alignStart="@+id/userName" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginTop="34dp"
        android:id="@+id/userDeviceId"
        android:hint="打印机编号"
        android:maxLines="1"
        android:imeOptions="actionNext"
        android:layout_below="@+id/userPassword"
        android:layout_alignStart="@+id/userPassword" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_printer"
        android:id="@+id/imageView4"
        android:layout_above="@+id/userText"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/userDeviceId"
        android:layout_alignEnd="@+id/imageView3" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_mess"
        android:id="@+id/imageView5"
        android:layout_above="@+id/btn_save"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/userText" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/userText"
        android:hint="打印后缀"

        android:layout_marginTop="34dp"
        android:layout_below="@+id/userDeviceId"
        android:layout_alignStart="@+id/userDeviceId" />

    <TextView
        android:text="以上信息由玲珑软件公司负责提供"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:id="@+id/textView2"
        android:layout_below="@+id/btn_save"
        android:layout_centerHorizontal="true" />

</RelativeLayout>